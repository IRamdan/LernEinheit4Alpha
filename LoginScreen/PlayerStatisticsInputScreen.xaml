<Window x:Class="LoginScreen.PlayerStatisticsInputScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Input Text" Height="250" Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <TextBlock Padding="10" Foreground="Black"/>
        </Border>
        <StackPanel Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="13">PLEASE ENTER THE NICKNAME!</TextBlock>
            <TextBox x:Name="InputTextBox" Margin="0,30,0,30"
                         Width="255"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
            <Button Content="Confirm" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
