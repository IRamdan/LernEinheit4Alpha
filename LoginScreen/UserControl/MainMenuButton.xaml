<UserControl x:Class="LoginScreen.MainMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoginScreen"
             >
    <DockPanel>
        <Border>
            <Button x:Name="MainButton" Margin="0,10,0,0"  Height="80" Width="450" Style="{DynamicResource MainMenuButton}" >
                <Button.Content>
                    <TextBlock Style="{DynamicResource NeonTextStyleOn}" FontSize="40" Text="{Binding ButtonContent, RelativeSource={RelativeSource AncestorType={x:Type local:MainMenuButton}}}"/>
                </Button.Content>
            </Button>
        </Border>
        <Image x:Name="RobotImage" Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType={x:Type local:MainMenuButton}}}" Height="50" Visibility="Collapsed" />
    </DockPanel>
</UserControl>
