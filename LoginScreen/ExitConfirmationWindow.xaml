<Window x:Class="LoginScreen.ExitConfirmationWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exit Confirmation" Height="150" Width="300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Are you sure you want to exit the game?" FontSize="15" VerticalAlignment="Top" Margin="0,30,0,0" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Bottom">
            <Button Content="OK" Margin="5" Width="75" Click="OK_Click"/>
            <Button Content="Cancel" Margin="5" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>