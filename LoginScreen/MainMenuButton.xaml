<UserControl x:Class="LoginScreen.MainMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoginScreen"
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave">
    <DockPanel>
        <Button x:Name="MainButton" Content="{Binding ButtonContent, RelativeSource={RelativeSource AncestorType={x:Type local:MainMenuButton}}}" Style="{Binding ButtonStyle, RelativeSource={RelativeSource AncestorType={x:Type local:MainMenuButton}}}" />
        <Image x:Name="RobotImage" Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType={x:Type local:MainMenuButton}}}" Height="50" Visibility="Collapsed" />
    </DockPanel>
</UserControl>
